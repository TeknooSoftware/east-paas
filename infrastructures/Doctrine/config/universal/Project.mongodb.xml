<?xml version="1.0" encoding="UTF-8"?>
<!--infrastructures/Doctrine/config/Project.mongodb.xml-->
<doctrine-mongo-mapping xmlns="http://doctrine-project.org/schemas/odm/doctrine-mongo-mapping"
                        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                        xsi:schemaLocation="http://doctrine-project.org/schemas/odm/doctrine-mongo-mapping
                                            http://doctrine-project.org/schemas/odm/doctrine-mongo-mapping.xsd">

    <document name="Teknoo\East\Paas\Object\Project" collection="projects" inheritance-type="COLLECTION_PER_CLASS">
        <id type="string" strategy="UUID"/>
        <field field-name="name" type="string" nullable="false"/>
        <field field-name="createdAt" name="created_at" type="date" nullable="false"/>
        <field field-name="updatedAt" name="updated_at" type="date" />
        <embed-one field-name="sourceRepository" field="source_repository" target-document="Teknoo\East\Paas\Object\GitRepository" nullable="false"/>
        <embed-one field-name="imagesRegistry" field="images_registry" target-document="Teknoo\East\Paas\Object\ImageRegistry" nullable="false"/>
        <reference-one field="account" target-document="Teknoo\East\Paas\Object\Account" inversed-by="projects" nullable="false">
            <cascade />
        </reference-one>
        <reference-many field="clusters" target-document="Teknoo\East\Paas\Object\Cluster" inversed-by="project">
            <cascade>
                <all/>
            </cascade>
        </reference-many>
        <reference-many field="jobs" target-document="Teknoo\East\Paas\Object\Job" inversed-by="project">
            <cascade>
                <all/>
            </cascade>
        </reference-many>
    </document>
</doctrine-mongo-mapping>
