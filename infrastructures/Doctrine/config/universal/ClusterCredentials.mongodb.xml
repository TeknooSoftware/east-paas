<?xml version="1.0" encoding="UTF-8"?>
<!--infrastructures/Doctrine/config/ClusterCredentials.mongodb.xml-->
<doctrine-mongo-mapping xmlns="http://doctrine-project.org/schemas/odm/doctrine-mongo-mapping"
                        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                        xsi:schemaLocation="http://doctrine-project.org/schemas/odm/doctrine-mongo-mapping
                                            http://doctrine-project.org/schemas/odm/doctrine-mongo-mapping.xsd">

    <embedded-document name="Teknoo\East\Paas\Object\ClusterCredentials">
        <id type="string" strategy="UUID"/>
        <field field-name="serverCertificate" name="server_certificate" type="string" nullable="false"/>
        <field field-name="token" name="token" type="string" nullable="false"/>
        <field field-name="username" name="username" type="string" nullable="false" />
        <field field-name="password" name="password" type="string" nullable="false" />
        <field field-name="createdAt" name="created_at" type="date" nullable="false"/>
        <field field-name="updatedAt" name="updated_at" type="date" />
        </embedded-document>
</doctrine-mongo-mapping>
